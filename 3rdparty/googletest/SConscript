# coding: utf-8
Import('env')
env_local = env.Clone()

# include dirs
env_local.AppendUnique(CPPPATH = ['.',
                                  'include',
                                 ])
# preprocessor definitions
env_local.AppendUnique(CPPDEFINES = [])

# get list of files
files = Glob('*.c*')
    
# build library
gtest_lib = env_local.StaticLibrary('gtest',Glob('src/gtest-all.cc'))
Return('gtest_lib')

